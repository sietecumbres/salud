	<div class="group">
		<%= label_tag 'hoja_vida[frecuencia]', "Frecuencia", :class => :label %>
		<%= text_field_tag 'hoja_vida[frecuencia]', equipo.hoja_vida.frecuencia, :class => 'text_field' %>
	</div>
</fieldset>
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "Guardar") %>
    Guardar
  </button>  
  <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Cancelar") + " " + t("web-app-theme.cancel", :default => "Cancelar"), list_equipos_path, :class => "button" %>
</div>
