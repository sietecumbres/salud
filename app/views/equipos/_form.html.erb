<div class="group">
  <%= f.label :modelo, "Modelo", :class => :label %>
  <%= f.text_field :modelo, :class => 'text_field' %>
</div>
<div class="group">
  <%= f.label :marca, "Marca", :class => :label %>
  <%= f.text_field :marca, :class => 'text_field' %>
</div>
<div class="group">
  <%= f.label :serial, "Serial", :class => :label %>
  <%= f.text_field :serial, :class => 'text_field' %>
</div>
<div class="group">
  <%= f.label :placa, "Placa", :class => :label %>
  <%= f.text_field :placa, :class => 'text_field' %>
</div>
<div class="group">
  <%= f.label :tipo_equipo_id, "Tipo", :class => :label %>
  <%= f.select :tipo_equipo_id, options_for_select(TipoEquipo.all.collect{|tipo| [tipo.nombre, tipo.id]}) %>
</div>
<div class="group">
  <%= f.label :subtipo_equipo_id, "Subtipo", :class => :label %>
  <%= f.select :subtipo_equipo_id, options_for_select(SubtipoEquipo.all.collect{|subtipo| [subtipo.nombre, subtipo.id]}) %>
</div>
<div class="group">
  <%= f.label :tipo_adquisicion_id, "Tipo de Adquisición", :class => :label %>
  <%= f.select :tipo_adquisicion_id, options_for_select(TipoAdquisicion.all.collect{|tipo| [tipo.nombre, tipo.id]}) %>
</div>
<div class="group">
  <%= f.label :responsable_id, "Responsable", :class => :label %>
  <%= f.select :responsable_id, options_for_select(Persona.all.collect{|persona| [persona.nombre, persona.id]}) %>
</div>
<div class="group">
  <%= f.label :area_id, "Área", :class => :label %>
  <%= f.select :area_id, options_for_select(Area.all.collect{|area| [area.nombre, area.id]}) %>
</div>
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "Guardar") %>
    Guardar
  </button>  
  <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Cancelar") + " " + t("web-app-theme.cancel", :default => "Cancelar"), list_equipos_path, :class => "button" %>
</div>