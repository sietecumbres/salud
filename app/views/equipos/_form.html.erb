<fieldset>
	<legend>Informaci&oacute;n</legend>
<div class="group">
  <%= f.label :modelo, "Modelo", :class => :label %>
  <%= f.text_field :modelo, :class => 'text_field required' %>
</div>
<div class="group">
  <%= f.label :marca, "Marca", :class => :label %>
  <%= f.text_field :marca, :class => 'autocomplete text_field' %>
</div>
<div class="group">
  <%= f.label :serial, "Serial", :class => :label %>
  <%= f.text_field :serial, :class => 'text_field numeric' %>
</div>
<div class="group">
  <%= f.label :placa, "Placa", :class => :label %>
  <%= f.text_field :placa, :class => 'text_field' %>
</div>
<div class="group">
  <%= f.label :valor, "Valor", :class => :label %>
  <%= f.text_field :valor, :class => 'text_field numeric' %>
</div>
<div class="group">
  <%= f.label :tipo_equipo_id, "Tipo", :class => :label %>
  <%= f.select :tipo_equipo_id, options_for_select(TipoEquipo.all.collect{|tipo| [tipo.nombre, tipo.id]}, equipo.tipo_equipo_id), {:include_blank => true} %>
</div>
<div class="group">
  <%= f.label :subtipo_equipo_id, "Subtipo", :class => :label %>
  <%= f.select :subtipo_equipo_id, options_for_select(SubtipoEquipo.all.collect{|subtipo| [subtipo.nombre, subtipo.id]}, equipo.subtipo_equipo_id), {:include_blank => true} %>
</div>
<div class="group">
  <%= f.label :tipo_adquisicion_id, "Tipo de Adquisición", :class => :label %>
  <%= f.select :tipo_adquisicion_id, options_for_select(TipoAdquisicion.all.collect{|tipo| [tipo.nombre, tipo.id]}, equipo.tipo_adquisicion_id), {:include_blank => true} %>
</div>
<div class="group">
  <%= f.label :responsable_id, "Responsable", :class => :label %>
  <%= f.select :responsable_id, options_for_select(Persona.all.collect{|persona| [persona.nombre, persona.id]}, equipo.responsable_id), {:include_blank => true} %>
</div>
<div class="group">
  <%= f.label :area_id, "Área", :class => :label %>
  <%= f.select :area_id, options_for_select(Area.all.collect{|area| [area.nombre, area.id]}, equipo.area_id), {:include_blank => true} %>
</div>
</fieldset>
<fieldset>
	<legend>Hoja de Vida</legend>
	<div class="group">
		<%= label_tag 'hoja_vida[fecha_compra]', "Fecha Compra", :class => :label %>
		<%= text_field_tag 'hoja_vida[fecha_compra]', equipo.hoja_vida.fecha_compra, :class => 'text_field datepicker' %>
	</div>
	<div class="group">
		<%= label_tag 'hoja_vida[fecha_instalacion]', "Fecha Instalación", :class => :label %>
		<%= text_field_tag 'hoja_vida[fecha_instalacion]', equipo.hoja_vida.fecha_instalacion, :class => 'text_field datepicker' %>
	</div>
	<div class="group">
		<%= label_tag 'hoja_vida[fabricante_id]', "Fabricante", :class => :label %>
		<%= select_tag 'hoja_vida[fabricante_id]', options_for_select(Fabricante.all.collect{|fabricante| [fabricante.nombre, fabricante.id]}, equipo.hoja_vida.fabricante_id), {:include_blank => true} %>
	</div>
	<div class="group">
		<%= label_tag 'hoja_vida[proveedor_id]', "Proveedor", :class => :label %>
		<%= select_tag 'hoja_vida[proveedor_id]', options_for_select(Proveedor.all.collect{|proveedor| [proveedor.nombre, proveedor.id]}, equipo.hoja_vida.proveedor_id), {:include_blank => true} %>
	</div>
	<div class="group">
		<%= label_tag 'hoja_vida[garantia]', "Garantía", :class => :label %>
