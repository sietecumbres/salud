<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "Listado de Equipos", list_equipos_path %></li>
      <li class=""><%= link_to "Nuevo", new_equipo_path %></li>
      <li class="last active"><a href="">Detalles</a></li>
    </ul>
  </div>
  <div class="content">
      <h2 class="title">Detalles del equipo</h2>
    <div class="inner form">
      <div class="group wat-cf">
        <div class="left"><label class = "label">Modelo</label></div>
        <div class="right"><%= @equipo.modelo %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Marca</label></div>
        <div class="right"><%= @equipo.marca %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Serial</label></div>
        <div class="right"><%= @equipo.serial %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Placa</label></div>
        <div class="right"><%= @equipo.placa %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Valor</label></div>
        <div class="right"><%= @equipo.valor %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Tipo Equipo</label></div>
        <div class="right"><%= @equipo.tipo_equipo.nombre %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Subtipo Equipo</label></div>
        <div class="right"><%= @equipo.subtipo_equipo.nombre %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Tipo Adquisici&oacute;n</label></div>
        <div class="right"><%= @equipo.tipo_adquisicion.nombre %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">Responsable</label></div>
        <div class="right"><%= @equipo.responsable.nombre %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label">&Aacute;rea</label></div>
        <div class="right"><%= @equipo.area.nombre %></div>
      </div>
			<% unless @equipo.hoja_vida.nil? %>
				<h2 class="title">Hoja de Vida</h2>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Fecha Compra</label></div>
	        <div class="right"><%= @equipo.hoja_vida.fecha_compra %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Fecha Instalaci&oacute;n</label></div>
	        <div class="right"><%= @equipo.hoja_vida.fecha_instalacion %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Garant&iacute;a</label></div>
	        <div class="right"><%= @equipo.hoja_vida.garantia %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Fabricante</label></div>
	        <div class="right"><%= @equipo.hoja_vida.fabricante.nombre %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Proveedor</label></div>
	        <div class="right"><%= @equipo.hoja_vida.proveedor.nombre %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Manual de Operaci&oacute;n?</label></div>
	        <div class="right"><%= @equipo.hoja_vida.manual_operacion ? 'Si' : 'No' %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Voltaje</label></div>
	        <div class="right"><%= @equipo.hoja_vida.voltaje %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Amperaje</label></div>
	        <div class="right"><%= @equipo.hoja_vida.amperaje %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Potencia</label></div>
	        <div class="right"><%= @equipo.hoja_vida.potencia %></div>
				</div>
				<div class="group wat-cf">
					<div class="left"><label class = "label">Frecuencia</label></div>
	        <div class="right"><%= @equipo.hoja_vida.frecuencia %></div>
				</div>
			<% end %>
      <div class="group wat-cf">
        <div class="left"><label class = "label"></label></div>
        <div class="right"></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><label class = "label"></label></div>
        <div class="right"></div>
      </div>
			<div>
				<table>
					<tr>
						<td>Tipo de Movimiento</td>
						<td>Equipo(Placa)</td>
						<td>Destino</td>
						<td>Fecha</td>
					</tr>
					<%- @equipo.movimiento_equipos.each do |movimiento| %>
						<tr>
							<td><%= movimiento.transaction_type %></td>
							<td><%= movimiento.equipo.placa %></td>
							<td><%= movimiento.laboratorio.nombre %></td>
							<td><%= movimiento.fecha_movimiento %></td>
						</tr>
					<% end %>
				</table>
			</div>
      <div class="wat-cf">
	<%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "Editar") + " " + t("web-app-theme.edit", :default=> "Editar"), edit_equipo_path(@equipo), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Eliminar") + " " + t("web-app-theme.delete", :default => "Eliminar"), equipo_path(@equipo), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Esta seguro ?")}" %>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'layouts/sidebar') -%>