<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "Listado de Equipos", list_equipos_path %></li>
      <li class=""><%= link_to "Nuevo", new_equipo_path %></li>
      <li class="last active"><a href="">Detalles</a></li>
    </ul>
  </div>
  <div class="content">
      <h2 class="title">Detalles del equipo</h2>
    <div class="inner">
      <p>
	<b>Modelo</b>
	<%= @equipo.modelo %>
      </p>
      <p>
	<b>Marca</b>
	<%= @equipo.marca %>
      </p>
      <p>
	<b>Serial</b>
	<%= @equipo.serial %>
      </p>
      <p>
	<b>Placa</b>
	<%= @equipo.placa %>
      </p>
      <p>
	<b>Tipo Equipo</b>
	<%= @equipo.tipo_equipo.nombre %>
      </p>
      <p>
	<b>Subtipo Equipo</b>
	<%= @equipo.subtipo_equipo.nombre %>
      </p>
      <p>
	<b>Tipo Adquisici&oacute;n</b>
	<%= @equipo.tipo_adquisicion.nombre %>
      </p>
      <p>
	<b>Responsable</b>
	<%= @equipo.responsable.nombre %>
      </p>
      <p>
	<b>&Aacute;rea</b>
	<%= @equipo.area.nombre %>
      </p>
      <div class="wat-cf">
	<%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "Editar") + " " + t("web-app-theme.edit", :default=> "Editar"), edit_equipo_path(@equipo), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Eliminar") + " " + t("web-app-theme.delete", :default => "Eliminar"), equipo_path(@equipo), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Esta seguro ?")}" %>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'layouts/sidebar') -%>