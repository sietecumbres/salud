<div class="block">
  <div class="secondary-navigation">
  </div>
  <div class="content">
    <h2 class="title">Equipos</h2>
    <div class="inner">
      <% form_for @busqueda, :url => equipos_search_url, :html => { :class => :form } do |f| %>
        <div class="forms">
          <div class="group wat-cf">
            <div class="left">
              <label class = "label">Area</label>
            </div>
            <div class="right">
               <%= f.select 'area_id', options_for_select(@areas.collect{|area| [area.nombre, area.id]}), {:include_blank => 'Seleccionar'} %>
               <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Tipo</label>
            </div>
            <div class="right">
              <%= f.select 'tipo_equipo_id', options_for_select(@tipos.collect{|tipo| [tipo.nombre, tipo.id]}), {:include_blank => 'Seleccionar'} %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Subtipo</label>
            </div>
            <div class="right">
              <%= f.select 'subtipo_equipo_id', options_for_select(@subtipos.collect{|subtipo| [subtipo.nombre, subtipo.id]}), {:include_blank => 'Seleccionar'} %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Tipo de Adquisición</label>
            </div>
            <div class="right">
              <%= f.select 'tipo_adquisicion_id', options_for_select(@adquisiciones.collect{|adquisicion| [adquisicion.nombre, adquisicion.id]}),  {:include_blank => 'Seleccionar'}, :html => {:class => 'tipo-adquisicion'} %>
                <div id="otro-adquisicion" style="display:none;">
                  <label class = "label">Cual </label>
                  <%= text_field_tag(:otro_adquisicion) %>
                </div>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Responsable</label>
            </div>
            <div class="right">
              <%= f.select 'responsable_id', options_for_select(@responsables.collect{|responsable| [responsable.nombre, responsable.id]}), {:include_blank => 'Seleccionar'} %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Modelo</label>
            </div>
            <div class="right">
              <%= f.text_field(:modelo, :class => 'autocomplete text_field', 'data-remote' => 'modelo') %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Marca</label>
            </div>
            <div class="right">
              <%= f.text_field(:marca, :class => 'autocomplete text_field', 'data-remote' => 'marca') %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Serial</label>
            </div>
            <div class="right">
              <%= f.text_field(:serial, :class => 'autocomplete text_field', 'data-remote' => 'serial') %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Placa</label>
            </div>
            <div class="right">
              <%= f.text_field(:placa, :class => 'autocomplete text_field', 'data-remote' => 'placa') %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <label class = "label">Entre valores: </label>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Mínimo</label>
            </div>
            <div class="right">
              <%= text_field_tag :valor_min, nil, :class => "text_field" %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group wat-cf">
            <div class="left">
              <label class = "label">Máximo</label>
            </div>
            <div class="right">
              <%= text_field_tag :valor_max, nil, :class => "text_field" %>
              <span class="description">Ex: web-app-theme</span>
            </div>
         </div>
         <div class="group navform wat-cf">
           <div class="right">
             <button class="button" type="submit">
               <%= image_tag("web-app-theme/icons/tick.png") %> <%= "Buscar" %>
             </button>
           </div>
         </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="block">
  <div class="secondary-navigation">
  </div>
  <div class="content">
    <h2 class="title">Resultados de la Busqueda</h2>
    <div class="inner">
      <div class="inventario">
        <table class="table">
            <tr>
              <th class="first">Tipo</th>
              <th>Subtipo</th>
              <th>Modelo</th>
              <th>Marca</th>
              <th># de Serial</th>
              <th># de Inventario ó Placa</th>
              <th>Tipo de Tenencia ó Adquisición</th>
              <th>Valor</th>
              <th>Responsable</th>
              <th>Hoja de Vida</th>
              <th class="last">Agenda</th>
            </tr>
          <tbody>
            <% @equipos.each do |equipo| %>
              <%= render :partial => 'equipos/equipo_fila', :locals => {:equipo => equipo} %>
            <% end %>
          </tbody>
        </table>
        <div class="actions-bar wat-cf">
          <div class="actions">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'layouts/sidebar') -%>