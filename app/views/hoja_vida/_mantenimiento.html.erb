<br/>
<span>Seleccione el tipo de mantenimiento:</span>
<%= select_tag :year_for_agenda, options_for_select((Date.today.year..(Date.today.year + 10)).to_a) %>
<%= select_tag :tipos_mantenimiento, options_for_select(@tipos.collect{|tipo| [tipo.nombre, tipo.id]}), {:include_blank => 'Seleccionar'} %>
<br/>
<input type="hidden" value="<%= params[:id]%>" id="equipo" />
<h3>Programación Vs. Ejecución de mantenimientos para el año: <%= year %></h3>

<div class="block">
  <div class="secondary-navigation">
  </div>
  <div class="content">
    <div class="inner">
      <div class="inventario">
        <table class="table">
          <!-- This is the months header -->
          <thead>
            <tr>
              <th class="first">Mantenimiento</th>
              <th></th>
              <th>Ene</th>
              <th>Feb</th>
              <th>Mar</th>
              <th>Abr</th>
              <th>May</th>
              <th>Jun</th>
              <th>Jul</th>
              <th>Ago</th>
              <th>Sep</th>
              <th>Oct</th>
              <th>Nov</th>
              <th class="last">Dic</th>
            </tr>
          </thead>
          <tbody>
            <%= build_equipo_calendar_row(@equipo, year)  %>
          </tbody>
        </table>
      </div>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
      </div>
    </div>
  </div>
</div>
