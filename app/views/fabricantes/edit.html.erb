<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "Lista")}", fabricantes_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Nuevo fabricante")}", new_fabricante_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title">Editar Fabricante</h2>
    <div class="inner">
      <%= form_for @fabricante, :url => fabricante_path(@fabricante), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'layouts/sidebar') -%>