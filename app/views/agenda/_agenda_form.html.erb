<div class="block">
  <div class="content">
    <div class="inner form">
      <%= form_for @agenda, :url => url, :html => {:class => 'to-validate'} do |f| %>
        <legend><h2 class="title">Asignar Agenda</h2></legend>
        <div class="group">
          <label class="label">Fecha</label>
          <%= f.text_field 'fecha_programacion', :class => 'datepicker required' %>
        </div>
        <div class="group">
          <label class="label">Tipo de Mantenimiento</label>
          <%= f.select 'tipo_mantenimiento_id', options_for_select(@tipos.collect{|tipo| [tipo.nombre, tipo.id]}) %>
        </div>
        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/icons/tick.png", :alt => "Programar") %>
            Programar
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
