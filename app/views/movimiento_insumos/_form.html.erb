<%= f.error_messages %>
<div class="group">
  <label class="label">Tipo de Insumo</label>
  <%= select_tag :tipo_insumo, options_for_select(TipoInsumo.all.collect{|tipo| [tipo.nombre, tipo.id]}), {:include_blank => true} %>
</div>
<div class="group">
  <label class="label">Datos del Insumo</label>
  Fecha de vencimiento: <%= text_field_tag "insumo[fecha_vencimiento]", nil, :class => 'datepicker' %>&nbsp;
  Lote: <%= text_field_tag "insumo[lote]" %>
</div>
<div class="group">
  <%= f.label :cantidad, "Cantidad", :class => :label %>
  <%= f.text_field :cantidad %>
</div>
<div class="group">
  <%= f.label :unidad, "Unidad", :class => :label %>
  <%= f.text_field :unidad %>
</div>
<div class="group">
  <%= f.label :area_id, "Area", :class => :label %>
  <%= f.select :area_id, options_for_select(Area.all.collect{|area| [area.nombre, area.id]}), {:include_blank => true} %>
</div>
<div class="group">
  <%= f.label :laboratorio, "Laboratorio", :class => :label %>
  <%= f.select :laboratorio_id, options_for_select(Laboratorio.all.collect{|lab| [lab.nombre, lab.id]}), {:include_blank => true} %>
</div>
<div class="group">
  <%= f.label :fecha, "Fecha", :class => :label %>
  <%= f.text_field :fecha, :value =>  Time.now.strftime("%d/%m/%Y"), :class => 'datepicker' %>
</div>
<div class="group">
  <%= f.label :tipo_movimiento_id, "Tipo de Movimiento", :class => :label %>
  <%= f.select :tipo_movimiento_id, options_for_select(TipoMovimiento.all.collect{|tipomov| [tipomov.nombre, tipomov.id]}) %>
</div>
<div class="group">
  <%= f.label :responsable, "Responsable", :class => :label %>
  <%= current_user.login %>
  <%#= f.hidden_field :responsable, :value => current_user.id %>
</div>
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "Guardar") %>
    Guardar
  </button>
  <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Cancelar") + " " + t("web-app-theme.cancel", :default => "Cancelar"), movimiento_insumos_path, :class => "button" %>
</div>